# EditorConfig:
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,html,css}]
indent_style = space

[*.js]
indent_size = 2

[*.html]
indent_size = 2

[*.css]
indent_size = 2

[package.json]
indent_style = space
indent_size = 2

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
indent_size = 2

[*eslintrc.json]
indent_style = space
indent_size = 4
